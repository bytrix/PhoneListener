<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.jack.phonelistener.MainActivity"
    >
    <ListView
        android:id="@+id/lv_files"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        ></ListView>

    <LinearLayout
        android:id="@+id/layout_controller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:padding="10dp"
        android:background="#cfff"
        >
        <Space
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_rewind"
            android:background="@drawable/selector_rewind"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_play"
            android:background="@drawable/selector_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <!--<Button-->
            <!--android:id="@+id/btn_pause"-->
            <!--android:text="Pause"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--/>-->
        <Button
            android:id="@+id/btn_stop"
            android:background="@drawable/selector_stop"
            android:layout_width="36dp"
            android:layout_height="36dp"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />
        <Button
            android:id="@+id/btn_fast"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:background="@drawable/selector_fast"
            />
        <Space
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_above="@id/layout_controller"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cfff"
        />
    <TextView
        android:id="@+id/tv_calllog_info"
        android:layout_above="@id/pb"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:paddingTop="6dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cfff"
        />
</RelativeLayout>
